<div class="container">
  <div class="columns">
    <div class="column is-6 is-offset-3">
      <form id="edit-user-form">
        <div class="field">
          <label class="label">Username</label>
          <div class="control">
            <input
              class="input"
              type="text"
              id="edit-username-input"
              placeholder="Username"
              value="{{user.username}}"
            />
          </div>
        </div>
        <div class="field">
          <label class="label">Email</label>
          <div class="control">
            <input
              class="input"
              type="email"
              id="edit-email-input"
              placeholder="Email"
              value="{{user.email}}"
            />
          </div>
        </div>
        <div class="field">
          <label class="label">New Password</label>
          <div class="control">
            <input
              class="input"
              type="password"
              id="edit-password-input"
              placeholder="New Password"
            />
          </div>
        </div>
        <div class="field">
          <label class="label">Confirm New Password</label>
          <div class="control">
            <input
              class="input"
              type="password"
              id="edit-confirm-password-input"
              placeholder="Confirm New Password"
            />
          </div>
        </div>
        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link">Save Changes</button>
          </div>
          <div class="control">
            <a href="/dashboard" class="button is-text">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/editUser.js"></script>