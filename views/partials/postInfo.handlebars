{{#each posts}}
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">{{this.title}}</p>
    </header>
    <div class="card-content">
      <div class="content">
        {{this.content}}
      </div>
    </div>
    {{#if logged_in}}
      <footer class="card-footer">
        <a href="/edit/{{this.id}}" class="card-footer-item">Edit</a>
        <a href="#" class="card-footer-item">Delete</a>
      </footer>
    {{/if}}
  </div>
{{/each}}
